@page
@model EntAppSecond.Pages.EnrolmentListModel
@{
    ViewData["Title"] = "EnrolmentList";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Enrolment List</title>
</head>
<body>

    <div style="background-color:khaki; border-radius:10px">

        <table class="table">
            <thead>
                <tr>
                    <th>Firstname</th>
                    <th>Surname</th>
                    <th>PPS Number</th>
                    <th>Details</th>
                </tr>
            </thead>


            <tbody>
                @foreach (var student in Model.Students)
                {
                    // list out each of the properties.
                <tr>

                    <td>@student.ChildFirstNAme</td>
                    <td>@student.ChildSurname</td>
                    <td>@student.PPSNumber</td>
                    <td><a asp-page="EnrolmentDetails" asp-route-PPSNumber="@student.PPSNumber">Details</a></td>
                </tr>
                }
            </tbody>
        </table>
    </div>



</body>
</html>


