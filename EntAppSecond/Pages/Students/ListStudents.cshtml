@page
@model EntAppSecond.Pages.Students.ListStudentsModel
@{
    ViewData["Title"] = "Data Validation";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListStudents</title>
</head>
<body>

    <div style="background-color:khaki; border-radius:10px">

        <table class="table">
            <thead>
                <tr>
                    <th>Firstname</th>
                    <th>Surname</th>
                    <th>Gender</th>
                    <th>Date of Birth</th>
                    <th>PPS Number</th>
                    <th>Start Date</th>
                </tr>
            </thead>


            <tbody>
                @foreach (var student in Model.Students)
                {
                    // list out each of the properties.
                    <tr>

                        <td>@student.ChildFirstNAme</td>
                        <td>@student.ChildSurname</td>
                        <td>@student.Gender</td>
                        <td>@student.DateOfBirth</td>
                        <td>@student.PPSNumber</td>
                        <td>@student.StartDate</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div style="background-color:aqua; border-radius:10px">

        <table class="table">
            <thead>
                <tr>
                    <th>Firstname</th>
                    <th>Surname</th>
                    <th>Address</th>
                    <th>Related</th>
                    <th>Mobile</th>
                    <th>Mobile(2)</th>
                    <th>Alternate</th>
                    <th>email</th>
                    <th>email(2)</th>
                </tr>
            </thead>


            <tbody>
                @foreach (var student in Model.Students)
                {
                    <tr>

                        <td>@student.FirstName</td>
                        <td>@student.SecondName</td>
                        <td>@student.Address</td>
                        <td>@student.Guardian</td>
                        <td>@student.PhoneMobile</td>
                        <td>@student.PhoneSecond</td>
                        <td>@student.PhoneThird</td>
                        <td>@student.FirstEmailAddress</td>
                        <td>@student.SecondEmailAddress</td>


                    </tr>
                }
            </tbody>
        </table>
    </div>


    <div class="col-md-6" style="background-color:lavender;">
        <table class="table">
            <thead>
                <tr>
                    <th>Days to attend</th>
                </tr>
            </thead>


            <tbody>

                @foreach (var day in Model.Listdays)
                {
                    <tr>
                        <td>@day</td>
                    </tr>
                }

            </tbody>
        </table>



    </div>
    <div class="col-md-6" style="background-color:lavenderblush;">
        <table class="table">
            <thead>
                <tr>
                    <th>Total Cost (per week)</th>
                </tr>
            </thead>


            <tbody>

                @foreach (var cost in Model.TotalCost)
                {
                    <tr>
                        <td>@cost</td>
                    </tr>
                }
            </tbody>
        </table>


    </div>



</body>
</html>
