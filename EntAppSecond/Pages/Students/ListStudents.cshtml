                        case 1: days.push("Tuesday");
                        case 2: days.push("Wednesday");
                        case 3: days.push("Thursday");
                        case 4: days.push("Friday");
                        default:
                    }

                    document.getElementById("days").innerHTML = days.toString();
                }

            }

        }


    </script>


