@page
@model EntAppSecond.Pages.Students.ListStudentsModel
@{
    ViewData["Title"] = "Data Validation";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListStudents</title>
</head>
<body>

    <div style="background-color:khaki; border-radius:10px">

        <table class="table">
            <thead>
                <tr>
                    <th>Firstname</th>
                    <th>Surname</th>
                    <th>Gender</th>
                    <th>Date of Birth</th>
                    <th>PPS Number</th>
                </tr>
            </thead>


            <tbody>
                @foreach (var student in Model.Students)
                {
                    // list out each of the properties.
                    <tr>

                        <td>@student.ChildFirstNAme</td>
                        <td>@student.ChildSurname</td>
                        <td>@student.Gender</td>
                        <td>@student.DateOfBirth</td>
                        <td>@student.PPSNumber</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div style="background-color:aqua; border-radius:10px">

        <table class="table">
            <thead>
                <tr>
                    <th>Firstname</th>
                    <th>Surname</th>
                    <th>Address</th>
                    <th>Related</th>
                    <th>Mobile</th>
                    <th>Mobile(2)</th>
                    <th>Alternate</th>
                    <th>email</th>
                    <th>email(2)</th>
                    <th>No. Days</th>
                    <th>Partime/fulltime</th>
                    <th>startdate</th>
                </tr>
            </thead>


            <tbody>
                @foreach (var student in Model.Students)
                {
                    // list out each of the properties.
                    <tr>

                        <td>@student.FirstName</td>
                        <td>@student.SecondName</td>
                        <td>@student.Address</td>
                        <td>@student.Guardian</td>
                        <td>@student.PhoneMobile</td>
                        <td>@student.PhoneSecond</td>
                        <td>@student.PhoneThird</td>
                        <td>@student.FirstEmailAddress</td>
                        <td>@student.SecondEmailAddress</td>
                        <td>@student.DaysRequested</td>
                        <td>@student.HoursRequested</td>
                        <td>@student.StartDate</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div style="background-color:burlywood; border-radius:10px">

        <table class="table">
            <thead>
                <tr>
                    <th>Total Days</th>
                    <th>Partime/Fulltime</th>
                    <th>Cost per week</th>
                    <th>Startdate</th>

                </tr>
            </thead>


            <tbody>
                @foreach (var student in Model.Students)
                {
                    // list out each of the properties.


                    <tr>


                        <td>@student.SecondName</td>
                        <td>@Model.Listdays.ToString()</td>
                        <td>@student.StartDate</td>
                        <td>@student.Guardian</td>


                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div style="background-color:burlywood; border-radius:10px">

        <table class="table">
            <thead>
                <tr>
                    <th>Total Days</th>
                </tr>
            </thead>


            <tbody>
                @foreach (var day in Model.Listdays)
                {
                    // list out each of the properties.
                <tr>
                    <td>@day</td>
                </tr>
                }
            </tbody>
        </table>
    </div>


